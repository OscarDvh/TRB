---
import astroLogo from "../assets/astro.svg";
import logo from "../assets/logo.png";
import "../styles/global.css";
import background from "../assets/background.svg";
---

<html lang="es">
  <head>
    <title>Login</title>
  </head>
  <body class="h-screen w-screen bg-[#F5F5F5] font-sans">
    <div class="flex h-full">
      <!-- Izquierda: Bienvenida -->
      <div
        class="w-1/2 relative bg-[url('../assets/bg.jpg')] bg-cover bg-center"
      >
        <!-- Gradiente rojo → transparente encima -->
        <div
          class="absolute inset-0 bg-gradient-to-t from-blue-950 from-5% to-transparent"
        >
        </div>

        <!-- Logo en la esquina superior izquierda -->
        <div class="absolute top-5 left-5 z-20 flex items-center space-x-3">
          <img src={logo.src} alt="Logo" class="h-16" />
          <span class="text-[#EE1C02] text-2xl font-semibold"
            >Tintas y Recargas del Bajío</span
          >
        </div>

        <!-- Contenido centrado -->
        <div
          class="relative z-10 text-white flex flex-col justify-center items-center h-full px-10"
        >
          <h1 class="text-4xl font-bold mb-2">Bienvenido</h1>
          <p class="text-xl text-center max-w-sm text-white/80">
            Ingreso exclusivo para empleados.
          </p>
        </div>

        <!-- Footer con derechos -->
        <div
          class="absolute bottom-4 left-5 z-20 text-gray-400 text-x opacity-80"
        >
          © 2025 <span class="font-semibold">Tintas y Recargas del Bajío</span>
          | Diseñado por <span class="font-semibold">Oscar Vargas</span>
        </div>
      </div>

      <!-- Derecha: Login -->
      <div class="w-1/2 bg-white flex justify-center items-center shadow-xl">
        <form class="w-[80%] max-w-md space-y-6">
          <h1 class="block text-center text-2xl font-bold text-[#1B2A41]">
            Iniciar sesion
          </h1>

          <div>
            <label class="block text-sm font-medium text-[#1B2A41]"
              >Usuario</label
            >
            <input
              type="email"
              placeholder="usuario@mail.com"
              class="w-full border border-gray-300 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-[#EE1C02]"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-[#1B2A41]"
              >Contraseña</label
            >
            <input
              type="password"
              placeholder="********"
              class="w-full border border-gray-300 px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-[#EE1C02]"
            />
          </div>

          <div class="flex justify-between items-center text-sm text-gray-600">
            <label class="flex items-center space-x-2">
              <input type="checkbox" class="accent-[#EE1C02]" />
              <span>Recordarme</span>
            </label>
            <a href="#" class="text-[#EE1C02] hover:underline"
              >¿Olvidaste tu contraseña?</a
            >
          </div>

          <div class="flex space-x-4">
            <button
              type="submit"
              class="w-full bg-[#EE1C02] text-white py-2 rounded hover:bg-red-700"
              >Entrar</button
            >
          </div>

          <div class="text-center text-gray-400 text-sm mt-6">
            ¿Problemas para acceder? Contacta al administrador del sistema.
            <div class="flex justify-center space-x-4 mt-2">
              <a href="#"><i class="fab fa-facebook-f text-[#EE1C02]"></i></a>
              <a href="#"><i class="fab fa-twitter text-[#EE1C02]"></i></a>
              <a href="#"><i class="fab fa-instagram text-[#EE1C02]"></i></a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
